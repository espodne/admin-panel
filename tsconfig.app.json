{
  "compilerOptions": {
    "target": "ES6", // Цель компиляции (ES6 или выше)
    "module": "ESNext", // Используемый модульный формат (ESNext для современных модулей)
    "jsx": "react-jsx", // Используем новый механизм JSX (React 17+)
    "strict": true, // Включает строгую проверку типов
    "esModuleInterop": true, // Поддержка импорта CommonJS модулей
    "skipLibCheck": true, // Пропускает проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true, // Запрещает использование разных регистров в именах файлов
    "moduleResolution": "node", // Режим разрешения модулей (node для Node.js)
    "allowSyntheticDefaultImports": true, // Позволяет использовать default импорты
    "resolveJsonModule": true, // Позволяет импортировать JSON файлы
    "isolatedModules": true, // Обеспечивает совместимость с Babel
    "noEmit": true, // Не генерирует выходные файлы (используется для проверки типов)
    "allowImportingTsExtensions": true

  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Включаем все файлы .ts и .tsx в папке src
  "exclude": ["node_modules", "dist"] // Исключаем папки node_modules и dist
}